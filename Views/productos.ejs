<!DOCTYPE html>
<html lang="es">
<head>
  <%- include('partials/head', { title: title, cssFile: 'productos.css' }) %>
</head>
<body>
  <div class="bg-animation"></div>
  
  <%- include('partials/header', { activePage: 'productos' }) %>

  <!-- CARRUSEL DINÁMICO -->
  <section class="carrusel-wrapper">
    <div class="carrusel-container"></div>
    
    <div class="carrusel-controls">
      <button class="carrusel-prev" title="Anterior">
        <i class="fa-solid fa-chevron-left"></i>
      </button>
      <button class="carrusel-next" title="Siguiente">
        <i class="fa-solid fa-chevron-right"></i>
      </button>
    </div>

    <div class="carrusel-dots"></div>
  </section>

  <!-- RESTO DE CONTENIDO (mantener igual) -->
  <section class="specs">
    <div class="container">
      <h2>Especificaciones</h2>
      <div class="row g-4">
        <div class="col-md-6 col-lg-4">
          <div class="spec-card">
            <h4>Información Nutricional</h4>
            <ul class="spec-list">
              <li>Contenido: 355ml</li>
            </ul>
          </div>
        </div>
        
        <div class="col-md-6 col-lg-4">
          <div class="spec-card">
            <h4>Ingredientes Principales</h4>
            <ul class="spec-list">
              <li>Extracto de Guaraná</li>
              <li>Té Verde orgánico</li>
              <li>Ginseng premium</li>
              <li>Extractos de frutas naturales</li>
              <li>Agua purificada</li>
            </ul>
          </div>
        </div>
        
        <div class="col-md-6 col-lg-4">
          <div class="spec-card">
            <h4>Características</h4>
            <ul class="spec-list">
              <li>100% ingredientes naturales</li>
              <li>Sin colorantes artificiales</li>
              <li>Envase reciclable</li>
              <li>Producción sustentable</li>
              <li>Vegano y libre de gluten</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('partials/footer') %>

  <!-- Script del carrusel dinámico -->
  <script src="/js/productos-dinamico.js"></script>
</body>
</html>