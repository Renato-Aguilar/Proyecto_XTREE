<!DOCTYPE html>
<html lang="es">
<head>
  <%- include('../partials/head', { cssFile: 'auth.css' }) %>
  <style>
    .auth-box.edit-profile-box {
      max-width: 650px !important;
      width: 100% !important;
    }
    
    .button-container {
      display: flex;
      gap: 15px;
      margin-top: 30px;
      width: 100%;
    }
    
    .button-container a,
    .button-container button {
      flex: 1;
      text-align: center;
      text-decoration: none;
      padding: 15px !important;
    }
  </style>
</head>
<body>
  <div class="bg-animation"></div>
  <%- include('../partials/header') %>

  <main class="auth-container">
    <div class="auth-box edit-profile-box">
      <!-- Header con Avatar -->
      <div class="auth-header" style="text-align: center; padding-bottom: 0; margin-bottom: 0;">
        <div style="width: 80px; height: 80px; margin: 0 auto 20px; border-radius: 50%; background: linear-gradient(135deg, rgba(0, 255, 0, 0.2), rgba(0, 255, 0, 0.1)); border: 3px solid #00ff00; display: flex; align-items: center; justify-content: center;">
          <i class="fa-solid fa-user-circle" style="font-size: 4rem; color: #00ff00;"></i>
        </div>
        <h1>Editar Perfil</h1>
        <p>Actualiza tu información personal</p>
      </div>

      <!-- Mensajes Flash -->
      <% if (error && error.length > 0) { %>
        <div class="alert alert-error">
          <i class="fa-solid fa-circle-exclamation"></i>
          <%= error[0] %>
        </div>
      <% } %>

      <% if (success && success.length > 0) { %>
        <div class="alert alert-success">
          <i class="fa-solid fa-circle-check"></i>
          <%= success[0] %>
        </div>
      <% } %>

      <!-- Formulario -->
      <form action="/profile/edit" method="POST" class="auth-form">
        <!-- Nombre y Apellido en fila -->
        <div class="form-row">
          <div class="form-group">
            <label for="nombre">
              <i class="fa-solid fa-user"></i>
              Nombre
            </label>
            <input 
              type="text" 
              id="nombre" 
              name="nombre" 
              value="<%= user.nombre %>"
              required
              minlength="2"
              autocomplete="given-name"
            >
          </div>

          <div class="form-group">
            <label for="apellido">
              <i class="fa-solid fa-user"></i>
              Apellido
            </label>
            <input 
              type="text" 
              id="apellido" 
              name="apellido" 
              value="<%= user.apellido %>"
              required
              minlength="2"
              autocomplete="family-name"
            >
          </div>
        </div>

        <!-- Email (No editable) -->
        <div class="form-group">
          <label for="email">
            <i class="fa-solid fa-envelope"></i>
            Email (No editable)
          </label>
          <input 
            type="email" 
            id="email" 
            value="<%= user.email %>"
            disabled
            title="Para cambiar tu email, contacta con soporte"
          >
          <small class="form-hint">
            <i class="fa-solid fa-info-circle"></i>
            El email no puede ser cambiado. Si necesitas cambiar tu email, contacta con soporte.
          </small>
        </div>

        <!-- Dirección -->
        <div class="form-group">
          <label for="direccion">
            <i class="fa-solid fa-location-dot"></i>
            Dirección Completa
          </label>
          <input 
            type="text" 
            id="direccion" 
            name="direccion" 
            value="<%= user.direccion %>"
            required
            minlength="10"
            placeholder="Calle Principal 123, Comuna, Ciudad"
            autocomplete="street-address"
          >
          <small class="form-hint">Incluye calle, número, comuna y ciudad</small>
        </div>

        <!-- Botones -->
        <div class="button-container">
          <a href="/profile" class="btn-secondary">
            <i class="fa-solid fa-arrow-left"></i>
            Cancelar
          </a>
          <button type="submit" class="btn-primary">
            <i class="fa-solid fa-save"></i>
            Guardar Cambios
          </button>
        </div>
      </form>

      <!-- Info adicional -->
      <div class="auth-footer">
        <p>
          <i class="fa-solid fa-shield-halved"></i>
          Tu información personal está protegida y cifrada.
        </p>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>