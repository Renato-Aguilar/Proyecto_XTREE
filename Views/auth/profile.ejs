<!DOCTYPE html>
<html lang="es">
<head>
  <%- include('../partials/head', { cssFile: 'profile.css' }) %>
</head>
<body>
  <div class="bg-animation"></div>
  <%- include('../partials/header') %>

  <main class="profile-container">
    <div class="profile-header">
      <div class="profile-avatar">
        <i class="fa-solid fa-user-circle"></i>
      </div>
      <div class="profile-info">
        <h1><%= user.nombre %> <%= user.apellido %></h1>
        <p class="profile-email">
          <i class="fa-solid fa-envelope"></i>
          <%= user.email %>
        </p>
        <p class="profile-since">
          <i class="fa-solid fa-calendar"></i>
          Miembro desde <%= new Date(user.fechaRegistro).toLocaleDateString('es-CL', { year: 'numeric', month: 'long' }) %>
        </p>
      </div>
    </div>

    <!-- Mensajes Flash -->
    <% if (locals.error && error.length > 0) { %>
      <div class="alert alert-error">
        <i class="fa-solid fa-circle-exclamation"></i>
        <%= error[0] %>
      </div>
    <% } %>

    <% if (locals.success && success.length > 0) { %>
      <div class="alert alert-success">
        <i class="fa-solid fa-circle-check"></i>
        <%= success[0] %>
      </div>
    <% } %>

    <div class="profile-content">
      <!-- Panel izquierdo: Estadísticas -->
      <div class="profile-stats">
        <div class="stat-card">
          <div class="stat-icon">
            <i class="fa-solid fa-box"></i>
          </div>
          <div class="stat-info">
            <h3><%= stats.totalPedidos %></h3>
            <p>Pedidos Totales</p>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon">
            <i class="fa-solid fa-star"></i>
          </div>
          <div class="stat-info">
            <h3><%= stats.puntosAcumulados %></h3>
            <p>Puntos Acumulados</p>
          </div>
        </div>

        <div class="stat-card">
          <div class="stat-icon">
            <i class="fa-solid fa-trophy"></i>
          </div>
          <div class="stat-info">
            <h3><%= stats.nivel %></h3>
            <p>Nivel</p>
          </div>
        </div>

        <% if (stats.gastoTotal > 0) { %>
        <div class="stat-card full-width">
          <div class="stat-icon">
            <i class="fa-solid fa-dollar-sign"></i>
          </div>
          <div class="stat-info">
            <h3>$<%= stats.gastoTotal.toLocaleString('es-CL') %></h3>
            <p>Gasto Total</p>
          </div>
        </div>
        <% } %>
      </div>

      <!-- Panel derecho: Información y acciones -->
      <div class="profile-details">
        <div class="detail-card">
          <h2>
            <i class="fa-solid fa-user"></i>
            Información Personal
          </h2>
          <div class="detail-row">
            <span class="detail-label">Nombre completo:</span>
            <span class="detail-value"><%= user.nombre %> <%= user.apellido %></span>
          </div>
          <div class="detail-row">
            <span class="detail-label">Usuario:</span>
            <span class="detail-value">@<%= user.username %></span>
          </div>
          <div class="detail-row">
            <span class="detail-label">Email:</span>
            <span class="detail-value"><%= user.email %></span>
          </div>
          <div class="detail-row">
            <span class="detail-label">Dirección:</span>
            <span class="detail-value"><%= user.direccion || 'No especificada' %></span>
          </div>
          <button class="btn-edit" onclick="alert('Funcionalidad de edición próximamente')">
            <i class="fa-solid fa-pen"></i>
            Editar Perfil
          </button>
        </div>

        <div class="detail-card">
          <h2>
            <i class="fa-solid fa-bolt"></i>
            Acciones Rápidas
          </h2>
          <div class="quick-actions">
            <a href="/mis-pedidos" class="action-btn">
              <i class="fa-solid fa-box"></i>
              <span>Ver Mis Pedidos</span>
            </a>
            <a href="/carrito" class="action-btn">
              <i class="fa-solid fa-shopping-cart"></i>
              <span>Ir al Carrito</span>
            </a>
            <a href="/comprar" class="action-btn">
              <i class="fa-solid fa-store"></i>
              <span>Seguir Comprando</span>
            </a>
          </div>
        </div>

        <div class="detail-card security-card">
          <h2>
            <i class="fa-solid fa-shield-halved"></i>
            Seguridad
          </h2>
          <p>Mantén tu cuenta segura actualizando tu contraseña regularmente.</p>
          <button class="btn-security" onclick="alert('Cambio de contraseña próximamente')">
            <i class="fa-solid fa-key"></i>
            Cambiar Contraseña
          </button>
        </div>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>